<?xml version="1.0"?>
<!-- This file details any extensions needed to the data model to store data from this source, everything else is automatically generated from the model description so this is all we need to do to add to the model. -->

<classes>
<!-- add any <class> elements here -->

    <class name="VariationSet"  is-interface="true"  extends="DataSet">
        <collection name="sequenceAlterations" referenced-type="SequenceAlteration" reverse-reference="variationSets"  />
        <collection name="publications" referenced-type="Publication" />
        <reference name="sraRun" referenced-type="SRARun" reverse-reference="variationSet"/>
        <!--add SRA sample here -->
    </class>

    <class name="SequenceAlteration" extends="SequenceFeature" is-interface="true">
        <attribute name="variantSequence" type="java.lang.String"/>
        <attribute name="referenceSequence" type="java.lang.String"/>
        <attribute name="type" type="java.lang.String"/>
        <collection name="variationSets" referenced-type="VariationSet" reverse-reference="sequenceAlterations"/>
        <collection name="variants"  referenced-type="Strain"  reverse-reference="sequenceAlterations"  />
        <collection name="consequences"  referenced-type="Consequence"  reverse-reference="sequenceAlteration"  />

        <!--strain in feature is the reference strain-->
    </class>

    <class name="SequenceFeature" is-interface="true">
<!--
        <collection name="strains"  referenced-type="Strain" reverse-reference="features"  />
-->
    </class>
    <class  name="Strain"  is-interface="true">
        <collection name="sequenceAlterations" referenced-type="SequenceAlteration" reverse-reference="variants"  />
    </class>
    <class name="SRARun"  is-interface="true">
        <collection name="variationSet" referenced-type="VariationSet" reverse-reference="sraRun" />
    </class>

    <class  name="Consequence"  is-interface="true">
        <attribute name="allele" type="java.lang.String"/>
        <attribute name="putativeImpact" type="java.lang.String"/>
        <attribute name="nucleotideVariant" type="java.lang.String"/>
        <attribute name="aminoAcidsVariant" type="java.lang.String"/>

        <reference name="sequenceAlteration" referenced-type="SequenceAlteration" reverse-reference="consequences"  />
        <collection name="annotations"  referenced-type="SOTerm"  />
    </class>

    <!--<class  name="CStrain"  extends="Organism"  is-interface="true">
        <reference name="organism" referenced-type="Organism" reverse-reference="strains"/>
        <collection name="sequenceAlterations" referenced-type="SequenceAlteration" reverse-reference="strains"  />
    </class>-->

    <class name="Indel" extends="SequenceAlteration" is-interface="true"/>
    <class name="Deletion" extends="SequenceAlteration" is-interface="true"/>
    <class name="Insertion" extends="SequenceAlteration" is-interface="true"/>
    <class name="Substitution" extends="SequenceAlteration" is-interface="true"/>
    <class name="SNV" extends="Substitution" is-interface="true"/>
</classes>
